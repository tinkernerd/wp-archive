---
const today = new Date();
import { siteConfig } from "@/site-config";
import SocialIcons from "./SocialIcons.astro";
---
<footer class="border-t border-theme-border text-theme-text-muted w-full py-4 px-5 flex flex-col md:flex-row justify-between items-center md:h-12 gap-2">
  <div class="text-center md:text-left">
    <span class="text-sm md:text-base">&copy; {today.getFullYear()} | {siteConfig.author} | All rights reserved.</span>
  </div>

  <div class="flex flex-col md:flex-row items-center gap-3">
    <a href="/disclaimer" class="text-sm text-gray-400 hover:text-gray-200">Disclaimer</a>
    <a href="/privacy" class="text-sm text-gray-400 hover:text-gray-200">Privacy Policy</a>
    <a href="https://contact.tinkernerd.dev" target="_blank" title="Contact Nick" class="text-sm text-blue-400 hover:text-blue-200">Contact</a>

  </div>

  <div class="flex flex-col md:flex-row items-center gap-3">
    <SocialIcons />
  </div>
</footer>
